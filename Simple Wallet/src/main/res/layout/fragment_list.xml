<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow">

    <br.com.tolive.simplewallet.views.CustomViewShadow
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_balance_content_height"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:background="@color/transparent_black"
        app:orientationShadow="vertical"
        android:id="@+id/fragment_list_container_balance">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <br.com.tolive.simplewallet.views.CustomTextView
                app:font="@string/app_font"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:singleLine="true"
                android:textColor="@color/snow"
                android:layout_gravity="center_vertical"
                android:text="@string/fragment_list_text_balance"/>

            <br.com.tolive.simplewallet.views.CustomTextView
                app:font="@string/app_font"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/snow"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:id="@+id/fragment_list_text_balance_number" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <br.com.tolive.simplewallet.views.CustomTextView
                app:font="@string/app_font"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/snow"
                android:layout_gravity="center_vertical"
                android:text="@string/fragment_list_text_gain"/>

            <br.com.tolive.simplewallet.views.CustomTextView
                app:font="@string/app_font"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/snow"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:id="@+id/fragment_list_text_gain_number" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <br.com.tolive.simplewallet.views.CustomTextView
                app:font="@string/app_font"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/snow"
                android:layout_gravity="center_vertical"
                android:text="@string/fragment_list_text_expnese"/>

            <br.com.tolive.simplewallet.views.CustomTextView
                app:font="@string/app_font"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/snow"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:id="@+id/fragment_list_text_expense_number" />

        </LinearLayout>
    </br.com.tolive.simplewallet.views.CustomViewShadow>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="40dp"-->
        <!--android:background="@color/snow"-->
        <!--/>-->

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_list_list_entries"
        android:layout_gravity="center_horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        />

</LinearLayout>