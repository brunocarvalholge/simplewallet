<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/snow"
        android:orientation="vertical">

        <br.com.tolive.simplewallet.views.CustomTextView
            app:font="@string/app_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/app_font_title"
            android:text="@string/fragment_about_text_more_apps" />

        <br.com.tolive.simplewallet.views.CustomView
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divisor_medium"
            android:background="@color/gray"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_about_tolivehealthy">

            <br.com.tolive.simplewallet.views.CustomTextView
                app:font="@string/app_font"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/green_tolivehealthy"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/app_font_item_big"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/fragment_about_tolivehealthy_text" />

            <ImageView

                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_tolivehealthy"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:contentDescription="@android:string/untitled"
                android:layout_gravity="end"/>

        </RelativeLayout>

        <br.com.tolive.simplewallet.views.CustomView
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divisor_small"
            android:background="@color/snow"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_about_gastossimplespro">

            <br.com.tolive.simplewallet.views.CustomTextView
                app:font="@string/app_font"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/primary_green"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/app_font_item_big"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/fragment_about_gastossimplespro_text" />

            <ImageView

                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="2dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_launcher"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:contentDescription="@android:string/untitled"
                android:layout_gravity="end"/>

        </RelativeLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />-->

        <br.com.tolive.simplewallet.views.CustomTextView
            app:font="@string/app_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/app_font_title"
            android:text="@string/fragment_about_text_fb_fanpage" />

        <br.com.tolive.simplewallet.views.CustomView
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divisor_medium"
            android:background="@color/gray"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_about_fb_fanpage">

            <br.com.tolive.simplewallet.views.CustomTextView
                app:font="@string/app_font"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/blue_facebook"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/app_font_item_big"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/fragment_about_text_fb" />

            <ImageView

                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_facebook"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:contentDescription="@android:string/untitled"
                android:layout_gravity="end"/>

        </RelativeLayout>

        <br.com.tolive.simplewallet.views.CustomTextView
            app:font="@string/app_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/app_font_title"
            android:text="@string/fragment_about_text_remove_ad_title" />

        <br.com.tolive.simplewallet.views.CustomView
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divisor_medium"
            android:background="@color/gray"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_about_container_remove_ad">

            <br.com.tolive.simplewallet.views.CustomTextView
                app:font="@string/app_font"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/primary_green"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/app_font_item_big"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:id="@+id/fragment_about_text_remove_ad"
                android:text="@string/fragment_about_text_remove_ad" />

            <br.com.tolive.simplewallet.views.CustomTextView
                app:font="@string/app_font"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textSize="@dimen/app_font_regular"
                android:textColor="@color/primary_green"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/fragment_about_text_remove_ad_price"
                android:text="@string/fragment_about_text_remove_ad_price"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_gravity="end"/>

        </RelativeLayout>

        <!--
        TODO: Review warnning from this file
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />-->

    </LinearLayout>

</ScrollView>

