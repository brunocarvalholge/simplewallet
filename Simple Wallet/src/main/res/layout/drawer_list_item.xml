<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/btn_nav_list"
    android:orientation="horizontal"
    android:id="@+id/drawer_list_item"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/image_menu_width"
        android:layout_height="@dimen/image_menu_height"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:contentDescription="@android:string/untitled"
        />


    <br.com.tolive.simplewallet.views.CustomTextView
        app:font="@string/app_font"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/list_item_title"/>

</LinearLayout>