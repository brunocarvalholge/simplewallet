<?xml version="1.0" encoding="utf-8"?>
<br.com.tolive.simplewallet.views.CustomViewShadow
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/transparent_gray"
    android:orientation="vertical"
    app:orientationShadow="horizontal"
    android:id="@+id/fragment_menu"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_menu_image_content"
        android:contentDescription="@android:string/untitled"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"/>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="@dimen/app_padding_small"
        android:paddingEnd="2dp"
        android:paddingRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:id="@+id/fragment_menu_list"/>
</br.com.tolive.simplewallet.views.CustomViewShadow>